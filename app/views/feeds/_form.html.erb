<%= form_with(model: feed, local: true, url:confirm_feeds_path) do |form| %>

  <div class="field">
    <%= form.label :image %>
    <!-- 確認画面から新規作成画面に戻った時に、 -->
    <!-- アップロードした画像を表示させるための記述 -->
    <%= image_tag(@feed.image.url) if @feed.image && @feed.image.url %>
    <%= form.file_field :image %>
    <%= form.hidden_field :image_cache %>
  </div>

   <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, id: :feed_title %>
  </div>

  <div class="field">
    <%= form.label :comment %>
    <%= form.text_area :content, id: :feed_content %>
  </div>


  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>